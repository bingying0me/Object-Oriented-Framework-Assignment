<head>
	<link rel = "stylesheet"
   type = "text/css"
   href = "../addStyle.css" />
</head>

<h3>{{viewTitle}}</h3>
<form action="/level" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{level._id}}">
	<div class="form-group">
		Level_ID:<br>
		<input type="numbers" class= "form-control" name="level_id" placeholder = "Level_ID" value="{{level.level_id}}" required="required" pattern="{1,20}">
		<br>
	</div>
	<div class="form-group">
		Level Name:<br>
		<input type="level_name" class= "form-control" name="level_name" value="{{level.level_name}}" required="required" placeholder = "Level Name" pattern="[A-z0-9]{1,100}">
		<br>
	</div>
	<div class="form-group">
		Discount Rate:<br>
		<input type="numbers" class= "form-control" name="discount_rate" placeholder = "Discount Rate" value="{{level.discount_rate}}" required="required" pattern="{1,20}">
		<br><br>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
		<button type="reset" class= "btn btn-info">Reset</button>
		<button type="view" class="btn btn-info"><a  href="/level/list"><i class="fa fa-list-alt"></i>View All</a> </button>
		<button type="menu" class="btn btn-info"><a  href="/menu"><i class="fa fa-list-alt"></i>Menu</a> </button>
	</div>
</form>
